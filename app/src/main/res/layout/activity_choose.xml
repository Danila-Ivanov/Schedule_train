<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layout_schedule">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvSchedule"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary_135"
        android:alpha="0.5"
        android:id="@+id/secondFon"
        android:clickable="true"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:id="@+id/layout_details_item"
        android:padding="14dp"
        android:background="@drawable/fon_toast"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_width="300dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fon_toast_2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView"
                android:layout_below="@+id/tvNameStation"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="3dp" />

            <TextView
                android:text="Савёлки"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvNameStation"
                android:textSize="21sp"
                android:textStyle="normal|bold"
                android:layout_centerHorizontal="true"
                android:gravity="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_details"
                android:layout_below="@+id/imageView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:text="@string/tvCountry_toast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="14sp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:text="Россия"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCountry_toast"
                    android:layout_marginLeft="21dp"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="@string/tvSity_toast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginTop="14dp"
                    android:textSize="14sp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:text="Савёлки"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSity_toast"
                    android:layout_marginLeft="21dp"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_btns_toast"
                android:layout_below="@+id/layout_details"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary">

                <Button
                    android:text="@string/btnChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnChoose_toast"
                    android:layout_weight="1"
                    android:background="@drawable/btn_toast_ok"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="2dp" />

                <Button
                    android:text="@string/btnCancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCancle_toast"
                    android:layout_weight="1"
                    android:background="@drawable/btn_toast_cancle"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>